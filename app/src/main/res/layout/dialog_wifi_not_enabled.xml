<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textViewDialogWifiNotConnectedError"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:layout_margin="20dp"
        android:textColor="@color/winnie_red" />

    <TextView
        android:id="@+id/textViewDialogWifiNotConnectedMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewDialogWifiNotConnectedError"
        android:gravity="center_horizontal"
        android:textSize="20sp" />

    <Button
        android:id="@+id/buttonDialogWifiNotConnectedExitApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="28dp"
        android:text="@string/button_dialog_wifi_not_connected_exit_app" />

</RelativeLayout>