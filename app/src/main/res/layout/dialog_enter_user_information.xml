<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/UserInformationTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter Login Information"
        android:textSize="21sp"
        android:textColor="@color/text_color"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/editTextDialogEnterEmail"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="10dp"
        android:textColor="@color/black"
        android:inputType="textEmailAddress"
        android:layout_below="@+id/UserInformationTitle"
        android:textSize="16sp"
        android:hint="Email Address"
        />

    <EditText
        android:id="@+id/editTextDialogEnterPassword"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editTextDialogEnterEmail"
        android:layout_centerInParent="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/testEmailPasswordOrBothIncorrect"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:text="Error"
        android:layout_centerInParent="true"
        android:layout_below="@+id/editTextDialogEnterPassword"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:visibility="invisible"
        />

    <Button
        android:id="@+id/buttonDialogConfirmInformation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="Login" />

    <Button
        android:id="@+id/buttonDialogEnterIPAddressCancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:text="@string/button_dialog_enter_ip_address_cancel" />


</RelativeLayout>