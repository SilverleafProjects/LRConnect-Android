<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialogTextViewModelYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please enter the model name and year of the coach."
        android:textAlignment="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215" />

    <Spinner
        android:id="@+id/CoachModelStartupSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogTextViewModelYear"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Select Model:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/dialogTextViewModelYear"
        />

    <Spinner
        android:id="@+id/CoachVersionStartupSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CoachModelStartupSpinner"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:text="Select Version:"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/CoachModelStartupSpinner"
        />

    <Button
        android:id="@+id/buttonEnableWebService"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Accept And Enable Rozie"
        android:layout_below="@+id/CoachVersionStartupSpinner"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintTop_toBottomOf="@+id/CoachVersionStartupSpinner"
        />

    <Button
        android:id="@+id/buttonDialogAcceptSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Accept"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonEnableWebService" />

</androidx.constraintlayout.widget.ConstraintLayout>