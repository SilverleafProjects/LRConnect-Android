<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/advancedSettingsLayout"
    android:layout_gravity="fill"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:layout_alignParentStart="true"
    >

    <TextView
        android:id="@+id/textViewDialogChangeAdvancedSettingsTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="System Control Settings"
        android:textColor="@color/text_color"
        android:textSize="16sp" />

    <Button
        android:id="@+id/buttonAdvancedSettings"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/textViewDialogChangeAdvancedSettingsTitle"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="10dp"
        android:text="Advanced Settings"
        android:textSize="9sp" />

    <Button
        android:id="@+id/buttonOemSettings"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/buttonAdvancedSettings"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="10dp"
        android:text="OEM Settings"
        android:textSize="9sp" />

    <Button
        android:id="@+id/buttonConnectionSettings"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/buttonOemSettings"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:text="Connection Settings"
        android:textSize="9sp" />

    <Spinner
        android:id="@+id/VersionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonConnectionSettings"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Select Version:"
        android:textSize="20dp" />

    <Spinner
        android:id="@+id/RozieVersionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/VersionSpinner"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Select Model:"
        android:textSize="20dp"
        />


    <Spinner
        android:id="@+id/HTTPAutoLoginSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RozieVersionSpinner"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Auto Login with HTTP:"
        android:textSize="20dp"
        />

    <CheckBox
        android:id="@+id/smsAlertCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HTTPAutoLoginSpinner"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="25dp"
        android:buttonTint="@color/text_color"
        android:layout_marginBottom="10dp"
        android:text="SMS Alerts" />

    <CheckBox
        android:id="@+id/emailAlertCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/HTTPAutoLoginSpinner"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:buttonTint="@color/text_color"
        android:layout_marginBottom="10dp"
        android:text="Email Alerts"
        />

    <TextView
        android:id="@+id/textViewEnableScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/smsAlertCheckbox"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:text="Screen Always On"
        android:textColor="@color/black"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/screenStatus"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEnableScreen"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="53dp"
        android:textColor="@color/text_color"
        android:textSize="12sp" />


    <Button
        android:id="@+id/enableScreenAlwaysOn"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/screenStatus"
        android:gravity="center"
        android:layout_marginLeft="40dp"
        android:text="Enable"
        android:textSize="10sp" />

    <Button
        android:id="@+id/disableScreenAlwaysOn"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enableScreenAlwaysOn"
        android:layout_gravity="center"
        android:layout_marginLeft="40dp"
        android:text="Disable"
        android:textSize="10sp" />

    <TextView
        android:id="@+id/textViewEnableCloud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emailAlertCheckbox"
        android:layout_marginRight="20dp"
        android:layout_alignParentRight="true"
        android:text="Enable Cloud Features"
        android:textColor="@color/black"
        android:textSize="13sp" />


    <TextView
        android:id="@+id/cloudStatus"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textViewEnableCloud"
        android:layout_alignParentRight="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="53dp"
        android:textColor="@color/text_color"
        android:textSize="12sp" />


    <Button
        android:id="@+id/enableCloudFeatures"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cloudStatus"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:gravity="center"
        android:text="Enable"
        android:textSize="10sp" />

    <Button
        android:id="@+id/disableCloudFeatures"
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/enableCloudFeatures"
        android:layout_marginRight="40dp"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:text="Disable"
        android:textSize="10sp" />

    <Button
        android:id="@+id/returnToAppButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:text="Cancel"/>

</RelativeLayout>