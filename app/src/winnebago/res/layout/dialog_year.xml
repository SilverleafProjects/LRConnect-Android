<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/dialogTextViewModelYear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enter the model year and Rozie version of this coach."
        android:textAlignment="center"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_alignParentTop="true"
        android:textSize="19sp"
        android:textStyle="bold"
        android:textColor="@color/text_color"
        android:layout_marginTop="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.215" />

    <Spinner
        android:id="@+id/RozieVersionSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogTextViewModelYear"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="Select Model:"
        android:textSize="20dp"
        />

    <Spinner
        android:id="@+id/CoachVersionStartupSpinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/RozieVersionSpinner"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Select Version:"
        android:textSize="20dp"
        />

    <Spinner
        android:id="@+id/OnStartupAutomaticLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CoachVersionStartupSpinner"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginLeft="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:text="Select Version:"
        android:textSize="20dp"
        />

    <Button
        android:id="@+id/buttonDialogAcceptSettings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginBottom="15dp"
        android:layout_alignParentBottom="true"
        android:text="Accept" >

    </Button>

</RelativeLayout>